<?xml version="1.0"?>

<!--
This file is used to control which rules are enabled/disabled.
Rules, rule groups and default parameters will still need to be
defined in the rules file, e.g. visa_audit_rules.pm.
-->

<LINTRA_CONFIGURATION>
<!--
This following defines the severity levels.
name         : Name of severity level. Must match severity defined in rules.
level        : Provides a mechanism to only run rules equal or smaller than a given level with the -V switch.
cause_failure: "yes": Lint status is "FAILED" if a rule with this severity is violated.
               "no" : Lint status is "PASSED" regardless of violation.
-->
<severity name="Error" level="1" cause_failure="yes"/>
<severity name="Warning" level="2" cause_failure="no"/>
<severity name="Information" level="3" cause_failure="no"/>

<!--
Used to enable or disable rules or rule groups, and override parameters and severity levels.

E.g.:
<rule id="50000" active="yes" severity="Error">
<rule id="50001" active="no">
<rule_group id="Scan Rules" active="yes" severity="Error">
    <param type="alphanumeric" name="scanModulesRegexp" value="visa_.*_muc"/>
</rule_group>
-->

<rule_group id="Scan" active="yes">
    <param type="alphanumeric" name="spyglassdftdir" value="$ENV{FEBE_WARD}/spyglassdft/outputs"/>
    <param type="alphanumeric" name="spyglassdftinputdir" value="$ENV{FEBE_WARD}/spyglassdft/inputs"/>
    <param type="alphanumeric" name="spyglassdftoutputdir" value="$ENV{FEBE_WARD}/spyglassdft/outputs"/>
    <!--param type="alphanumeric" name="syn_logs_dir" value="$ENV{FEBE_WARD}/syn/logs"/-->
    <param type="alphanumeric" name="syn_scripts_dir" value="$ENV{FEBE_WARD}/syn/scripts"/>
    <param type="alphanumeric" name="syn_reports_dir" value="$ENV{FEBE_WARD}/syn/reports"/>
    <param type="alphanumeric" name="collateraldftdir" value="$ENV{FEBE_WARD}/collateral/dft"/>
    <param type="alphanumeric" name="atpgreportdir" value="$ENV{FEBE_WARD}/sage/WORK"/>
    <param type="alphanumeric" name="atpgreportfile" value="coverage"/>
    <param type="alphanumeric" name="atpgmilestone" value="1.0"/>
    <param type="alphanumeric" name="stuckatmin" value="99"/>
    <param type="alphanumeric" name="atspeedmin" value="95"/>
</rule_group>

<!-- BEGIN SPYGLASS DFT RELATED RULE CHECKS -->

   <!-- Checking that SpyGlass DFT .prj file exists  -->
   <rule id="10001" active="yes" severity="Error"></rule>

   <!-- Checking that SpyGlass DFT .swl file exists  -->
   <rule id="10002" active="yes" severity="Error"></rule>

   <!-- Checking that SpyGlass DFT .sgdc file exists  -->
   <rule id="10003" active="yes" severity="Error"></rule>

   <!-- Checking that SpyGlass DFT moresimple.rpt file exists  -->
   <rule id="10004" active="yes" severity="Error"></rule>

   <!-- Checking that SpyGlass DFT spyglass.log file exists  -->
   <rule id="10005" active="yes" severity="Error"></rule>

   <!-- Checking that SpyGlass DFT summary.rpt file exists  -->
   <rule id="10006" active="yes" severity="Warning"></rule>

   <!-- Checking that SpyGlass .swl file with uniquified [ip]_ prefix exists  -->
   <rule id="10007" active="yes" severity="Error"></rule>

   <!-- SpyGlass DFT moresimple.rpt file must exist and is clean  -->
   <rule id="10008" active="yes" severity="Error"></rule>

   <!-- SpyGlass DFT summary.rpt file must exist and is clean (optional)  -->
   <rule id="10009" active="yes" severity="Warning"></rule>

   <!-- SpyGlass DFT spyglass.log file must exist and shows converged SIP_RTL_* goal run-->
   <rule id="10012" active="yes" severity="Error"></rule>

   <!-- SpyGlass DFT spyglass.log file must exist and shows converged SIP_RTL_* goal run-->
   <rule id="10013" active="yes" severity="Warning"></rule>

<!-- END SPYGLASS DFT RELATED RULE CHECKS -->

<!-- BEGIN SCAN INSERTION RELATED RULE CHECKS -->

   <!-- Coverage reported by DC is included in reports  -->
   <rule id="10010" active="yes" severity="Error"></rule>

   <!-- Standard scan config file used  -->
   <rule id="10011" active="yes" severity="Error"></rule>

   <!-- Scan quality report exists and is clean  -->
   <rule id="10020" active="yes" severity="Error"></rule>

   <!-- Scan insertion based on scan config generated by ISAF flow  -->
   <!--rule id="10021" active="yes" severity="Error"></rule-->

<!-- END SCAN INSERTION RELATED RULE CHECKS -->

<!-- BEGIN ATPG RELATED RULE CHECKS -->

   <rule id="10030" active="yes" severity="Error"></rule>

<!-- END ATPG RELATED RULE CHECKS -->

</LINTRA_CONFIGURATION>
